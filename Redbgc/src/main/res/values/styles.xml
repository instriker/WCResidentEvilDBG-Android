<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseButton" parent="@android:style/Widget.Holo.Button"></style>

    <style name="anchor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="settingsButton" parent="@style/BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:text">@string/settings</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="gameSetupModeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sectionTitle.child">
        <item name="android:textSize">20dp</item>
    </style>

    <!-- See D:\Utilisateurs\Alexandre\Projets\_External\platform_frameworks_base\core\res\res\values -->


    <!--
          https://android.googlesource.com/platform/frameworks/base/+/refs/heads/master/core/res/res/values/themes.xml 
