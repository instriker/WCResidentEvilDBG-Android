    <style name="Widget.TextView.DefaultTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_view_default_foreground</item>
        <item name="android:textColorHighlight">@color/defaultThemeAccent</item>
    </style>

    <style name="Widget.ListView.DefaultTheme" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@color/transparent</item>
    </style>

    <style name="Widget.ListView.Cards" parent="Widget.ListView.DefaultTheme">
        <!-- <item name="android:listSelector">@drawable/pile_background</item> -->
    </style>

    <style name="sectionTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/defaultThemeAccent</item>
    </style>

    <style name="listGroupTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <!-- <item name="android:textColor">@color/defaultThemeAccent</item> -->
        <item name="android:textColor">@color/defaultThemeForeground</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="listGroupTitleZone">

        <!-- <item name="android:background">@color/defaultThemeForeground</item> -->
        <item name="android:background">@drawable/turntrackerbackground</item>
    </style>

    <style name="cardTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="pileNumber" parent="cardTitle"></style>

    <style name="cardReference" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text_dark</item>
        <item name="android:textSize">@dimen/tinyText</item>
    </style>

    <style name="itemTitle">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <!-- <item name="android:textColor">@color/defaultThemeAccent</item> -->
        <item name="android:textColor">@color/defaultThemeForeground</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="scenarioDescription" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="emptyMessage" parent="@android:style/TextAppearance.Small"></style>

    <style name="cost" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/gold_foreground</item>
    </style>

    <style name="decorationLevel" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/decorations_foreground</item>
    </style>

    <style name="xpcost" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/xpcost_foreground</item>
    </style>

    <style name="health" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/health_full_foreground</item>
    </style>

    <style name="mainActivityLayout">
        <item name="android:layout_marginLeft">@dimen/screenMargin</item>
        <item name="android:layout_marginRight">@dimen/screenMargin</item>
    </style>

    <style name="mainActivityLayoutRoot">
        <item name="android:paddingLeft">@dimen/screenMargin</item>
        <item name="android:paddingRight">@dimen/screenMargin</item>
    </style>

    <style name="resultRow">
        <item name="android:paddingTop">@dimen/screenMargin</item>
        <item name="android:paddingBottom">@dimen/screenMargin</item>
    </style>

    <style name="resultRowLayout">
        <item name="android:layout_marginLeft">@dimen/screenMargin</item>
        <item name="android:layout_marginRight">@dimen/screenMargin</item>
        <item name="android:paddingTop">@dimen/screenMargin</item>
        <item name="android:paddingBottom">@dimen/screenMargin</item>
    </style>

    <style name="resultRowLayoutRoot">
        <item name="android:paddingLeft">@dimen/screenMargin</item>
        <item name="android:paddingRight">@dimen/screenMargin</item>
        <item name="android:paddingTop">@dimen/screenMargin</item>
        <item name="android:paddingBottom">@dimen/screenMargin</item>
    </style>

    <style name="previousButton">

        <!-- <item name="android:background">@drawable/btn_circle</item> -->
        <!-- <item name="android:src">@drawable/ic_find_previous_holo_dark</item> -->
        <item name="android:text">&lt;</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="nextButton">
        <item name="android:text">&gt;</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="healthAmountBig" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/veryBigText</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="healthProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_danger</item>
        <!-- <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item> -->
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="healthProgressBar.big">
        <item name="android:minHeight">36dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>

    <style name="boxTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/defaultThemeForeground</item>
        <item name="android:background">@drawable/groupeditems_title</item>
    </style>

    <style name="boxContent">
        <item name="android:paddingBottom">@dimen/groupsPadding</item>
        <item name="android:paddingTop">@dimen/groupsPadding</item>
    </style>

    <style name="boxBase">
        <item name="android:layout_marginTop">@dimen/groupsPadding</item>
        <item name="android:layout_marginBottom">@dimen/groupsPadding</item>
    </style>

    <style name="boxDamages" parent="@style/boxBase">
        <item name="android:background">@drawable/groupeditems_damages</item>
    </style>

    <style name="boxHeal" parent="@style/boxBase">
        <item name="android:background">@drawable/groupeditems_heal</item>
    </style>

    <style name="boxXp" parent="@style/boxBase">
        <item name="android:background">@drawable/groupeditems_xp</item>
    </style>

    <style name="boxMaxHealth" parent="@style/boxBase">
        <item name="android:background">@drawable/groupeditems_maxhealth</item>
    </style>

    <style name="roundButton" parent="@style/BaseButton">
        <!--<item name="android:background">@drawable/btn_circle</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
    </style>

    <style name="turnTracker">
        <item name="android:background">@drawable/turntrackerbackground</item>
    </style>

    <style name="pickPlayerButton" parent="@style/BaseButton">
        <item name="android:minWidth">75dp</item>
    </style>

    <style name="smallContentButton" parent="@style/BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="BottomPagerTabStrip">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/defaultThemeBackground</item>
        <item name="android:textColor">@color/defaultThemeForeground</item>
    </style>
</resources>